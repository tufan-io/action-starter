{
    "env": {
        "node": true
    },
    "extends": ["tslint:recommended", "typestrict", "tslint-sonarts", "tslint-config-security"],
    "rules": {
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-internal-module": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ]
    }
}
